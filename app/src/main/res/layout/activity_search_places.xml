<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity"
    android:background="@drawable/questions_background">

    <TextView
        android:id="@+id/search_places"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text = "@string/nearbyPlaces"
        android:layout_gravity="center_horizontal"
        android:textSize="25dp"
        android:textColor="@color/textColor2"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/search_numberOfResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text = ""
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:textColor="@color/textColor2"
        android:textStyle="bold"/>

    <ListView
        android:id="@+id/search_places_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:divider="#95a5ff"
        android:dividerHeight="1dp"/>

</LinearLayout>